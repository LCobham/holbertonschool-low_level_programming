CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c==.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $(CFLAGS) $^

%.o: %.c ; $(CC) -c -o $@ $(CFLAGS) $<

re: $(SRC)
	touch $(SRC)

clean: ; $(RM) *~ $(NAME)
oclean: ; $(RM) $(OBJ)
fclean: ; $(RM) *~ $(NAME) $(OBJ)
