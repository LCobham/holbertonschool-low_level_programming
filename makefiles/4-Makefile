CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %c,%o,$(SRC))
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS)

%.o: %.c
	$(CC) -c $< $(CFLAGS)

re: oclean all

clean: ; $(RM) *~ $(NAME)
oclean: ; $(RM) $(OBJ)
fclean: ; $(RM) *~ $(NAME) $(OBJ)
